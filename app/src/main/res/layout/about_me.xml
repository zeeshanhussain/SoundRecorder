<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="fill_parent"
            android:layout_height="230sp"
            android:layout_margin="8sp"
            android:padding="15sp"
            card_view:cardBackgroundColor="#37474F"
            card_view:cardElevation="4sp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp">

                <TextView
                    android:id="@+id/intr"
                    android:layout_width="fill_parent"
                    android:layout_height="30sp"
                    android:layout_marginLeft="30sp"
                    android:gravity="center"
                    android:text="Introduction"
                    android:textColor="#4CAF50"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/viv"
                    android:layout_width="110sp"
                    android:layout_height="180sp"
                    android:layout_alignParentTop="true"
                    android:layout_below="@+id/intr"
                    android:src="@drawable/sanyam"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="500sp"
                    android:layout_height="100sp"
                    android:layout_alignBottom="@+id/viv"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/intr"
                    android:layout_toEndOf="@+id/viv"
                    android:layout_toRightOf="@+id/viv"
                    android:gravity="center"
                    android:text="@string/about_me"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp">

                </TextView>

                <RelativeLayout
                    android:id="@+id/bu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView">

                    <Button
                        android:id="@+id/facebook"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10sp"
                        android:background="#00000000"
                        android:text="Facebook"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/twitter"
                        android:layout_width="70sp"
                        android:layout_height="40sp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="#00000000"
                        android:text="Twitter"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/google"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/facebook"
                        android:layout_centerHorizontal="true"
                        android:background="#00000000"
                        android:text="Google+"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/xda"
            android:layout_width="fill_parent"
            android:layout_height="130sp"
            android:layout_margin="8sp"
            android:padding="15sp"
            card_view:cardBackgroundColor="#37474F"
            card_view:cardElevation="4sp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp">

                <TextView
                    android:id="@+id/intr3"
                    android:layout_width="fill_parent"
                    android:layout_height="30sp"
                    android:gravity="center"
                    android:text="My XDA Profile "
                    android:textColor="#4CAF50"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="500sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/intr3"
                    android:layout_marginTop="20sp"
                    android:gravity="center"
                    android:text="Click this card to Visit my XDA Profile"
                    android:textColor="#FFFFFFFF"
                    android:textSize="15sp">

                </TextView>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>